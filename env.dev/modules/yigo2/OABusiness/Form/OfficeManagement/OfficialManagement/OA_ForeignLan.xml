                    <Column Key="SecretL" Caption="文件密级" DataType="Integer"/>
                    <Column Caption="创建人" DataType="Long" Key="Creator"/>
                    <Column Caption="创建日期" DataType="DateTime" Key="CreateTime"/>
                    <Column Caption="修改人" DataType="Long" Key="Modifier"/>
