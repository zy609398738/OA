<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--显示好友的ListView-->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/contact_fragment_pullrefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragment_chat_inputbottombar">

            <com.bokesoft.ecomm.im.android.ui.widget.IphoneTreeView
                android:id="@+id/contact_fragment_itv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@android:color/transparent"
                android:childDivider="@color/gray"
                android:divider="@color/gray"
                android:listSelector="@android:color/transparent" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</LinearLayout>